<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_remotekey_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical"
            android:minHeight="24dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <CheckBox
            android:id="@+id/checkbox_isdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="48dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_remotekey_fingerprint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:layout_weight="10"
        android:minHeight="48dp"
        android:text="@string/placeholder_keypair_alias"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageButton
        android:id="@+id/button_delete_remotekey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:contentDescription="@string/button_delete_remotekey"
        android:minHeight="48dp"
        app:srcCompat="@drawable/delete" />
</LinearLayout>
